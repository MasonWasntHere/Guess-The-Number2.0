import random

class User:

    def __init__(self, name, score):
        self.name = name
        self.score = score

    def assign_score(self, score):
        self.score = score

    def display_properties(self):
        print("Properties of the User:")
        print("Name:", self.name)
        print("Score:", self.score)

#ask user for name
print("please input your name")
name_input = input()

# Creating a user
user1 = User(name_input, 0)
#display user properties

#generate random number     
random_number = random.randint(1, 100)
#initialize number of guesses

number_of_guesses = 0
#ask user to guess the number

print("Guess the number between 1 and 100")
while True:
    user_guess = int(input())
    number_of_guesses += 1
    if user_guess > random_number:
        print("Too high")
    elif user_guess < random_number:
        print("Too low")
    else:
        print("Congratulations! You guessed the number in", number_of_guesses, "tries.")
        break
#assign score
user1.assign_score(number_of_guesses)

#display user properties
user1.display_properties()

#ask user to play again
print("Do you want to play again? (yes/no)")
play_again = input()

if play_again.lower() == "yes":
    #reset number of guesses
    number_of_guesses = 0
    #generate new random number
    random_number = random.randint(1, 100)
    #ask user to guess the number
    print("Guess the number between 1 and 100, or type in l to see the leaderboard")

    while True:
        user_guess = input()
        if user_guess.lower() == "l":
            print("Leaderboard:")
            print("Name:", user1.name)
            print("Score:", user1.score)
            continue
else:
    print("Thank you for playing!")
#end of game
